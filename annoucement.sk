on first join:
	set {annoucement::%player%} to 1
on join:
	if {annoucement::%player%} is not set:
		set {ogloszenie::%player%} to 1
command /annoucement [<text>]:
	trigger:
		if {annoucement::%player%} is 1:
			broadcast "<text>"
			set {annoucement::%player%} to 0
			wait 60 minutes
			set {annoucement::%player%} to 1
